<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- dialog_preferences.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/monotype_plantin_mt_pro_regular"
            android:gravity="center_vertical"
            android:lineHeight="40dp"
            android:lineSpacingExtra="4sp"
            android:maxLines="3"
            android:minLines="1"
            android:paddingStart="45dp"
            android:paddingTop="55dp"
            android:paddingBottom="15dp"
            android:singleLine="false"
            android:text="Select Preferences"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:flow_horizontalAlign="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/fanCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_15dp"
            android:button="@drawable/custom_checkbox_selector"
            android:fontFamily="@font/akkurat_pro_light"
            android:padding="@dimen/_5dp"
            android:text="    Fan"
            android:textSize="22sp" />

        <CheckBox
            android:id="@+id/lightCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_15dp"
            android:button="@drawable/custom_checkbox_light"
            android:fontFamily="@font/akkurat_pro_light"
            android:padding="@dimen/_5dp"
            android:text="    Light"
            android:textSize="22sp" />

        <Button
            android:id="@+id/okButton"
            style="@style/PrimaryButton"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="43dp"
            android:text="OK"
            android:textStyle="normal" />

        <Button
            android:id="@+id/cancelButton"
            style="@style/PrimaryWhiteButton"
            android:layout_width="250dp"

            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="43dp"
            android:text="Cancel" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>