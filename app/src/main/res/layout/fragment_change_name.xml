<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.bthome.viewModels.ChangeNameViewModel" />
    </data>

<android.support.constraint.ConstraintLayout
    android:background="@color/light_water_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChangeNameFragment">
    <LinearLayout
        android:id="@+id/bg_layout"
        android:background="@color/back_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="43dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/back_color"
            android:fontFamily="@font/segoeui"
            android:gravity="center_vertical"
            android:lineHeight="40dp"
            android:lineSpacingExtra="4sp"
            android:maxLines="3"
            android:minLines="1"
            android:paddingStart="25dp"
            android:paddingTop="@dimen/_55dp"
            android:paddingBottom="@dimen/_15dp"
            android:singleLine="false"
            android:text="@string/change_name"
            android:textColor="@color/light_water_"
            android:textSize="30sp"
            app:flow_horizontalAlign="center"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_36dp"

        android:layout_marginEnd="@dimen/_16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/customName"
        app:layout_constraintStart_toStartOf="@+id/customName"
        app:layout_constraintTop_toBottomOf="@+id/customName">
       <TextView
        android:id="@+id/chooseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="@dimen/_10dp"/>
        <TextView
            android:layout_margin="2dp"
            android:background="@drawable/select_device_unselected_bg"
            android:id="@+id/kitchen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitchen"
            android:textSize="24sp"
            android:padding="@dimen/_10dp"/>
        <TextView
            android:layout_margin="2dp"
            android:background="@drawable/select_device_unselected_bg"
            android:id="@+id/study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Study Room"
            android:textSize="24sp"
            android:padding="@dimen/_10dp"/>
        <TextView
            android:layout_margin="2dp"
            android:background="@drawable/select_device_unselected_bg"
            android:id="@+id/pooja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pooja Room"
            android:textSize="24sp"
            android:padding="@dimen/_10dp"/>
        <TextView
            android:layout_margin="2dp"
            android:background="@drawable/select_device_unselected_bg"
            android:id="@+id/store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Room"
            android:textSize="24sp"
            android:padding="@dimen/_10dp"/>
        <TextView
            android:layout_margin="2dp"
            android:background="@drawable/select_device_unselected_bg"
            android:id="@+id/hall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hall"
            android:textSize="24sp"
            android:padding="@dimen/_10dp"/>
        <TextView
            android:layout_margin="2dp"
            android:background="@drawable/select_device_unselected_bg"
            android:id="@+id/bed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bed Room"
            android:textSize="24sp"
            android:padding="@dimen/_10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/customName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_36dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/bg_layout"
        app:layout_constraintStart_toStartOf="@+id/bg_layout"
        app:layout_constraintTop_toBottomOf="@+id/bg_layout">

        <EditText
            android:id="@+id/device_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        style="@style/PrimaryButton"
        android:layout_width="@dimen/_222dp"
        android:layout_height="@dimen/_44dp"
        android:layout_marginStart="@dimen/_100dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:background="@drawable/primary_button_background_selector"
        android:text="@string/next"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/skipButton"
        app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/skipButton"
            style="@style/PrimaryWhiteButton"
            android:layout_width="@dimen/_210dp"
            android:layout_height="@dimen/_53dp"
            android:layout_marginBottom="@dimen/_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/next_button"
            app:layout_constraintStart_toStartOf="@+id/next_button"
            android:text="@string/cancel"
            tools:text="@string/skip" />

</android.support.constraint.ConstraintLayout>
</layout>