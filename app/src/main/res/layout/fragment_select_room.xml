<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.bthome.viewModels.SelectRoomViewModel" />
    </data>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.SelectRoomFragment">

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="47dp"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/monotype_plantin_mt_pro_regular"
        android:gravity="center_vertical"
        android:lineHeight="40dp"
        android:lineSpacingExtra="4sp"
        android:maxLines="3"
        android:minLines="1"
        android:paddingStart="55dp"
        android:paddingTop="@dimen/_55dp"
        android:paddingBottom="@dimen/_15dp"
        android:singleLine="false"
        android:text="@string/select_room"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:flow_horizontalAlign="center"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/kitchenlayout"
                android:layout_width="@dimen/_160dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/select_device_unselected_bg"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/monotype_plantin_mt_pro_regular"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="@string/kitchen" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="35dp"
                    android:scaleType="center"
                    android:src="@drawable/kitchen" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/poojaLayout"
                android:layout_width="@dimen/_160dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/select_device_unselected_bg"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/monotype_plantin_mt_pro_regular"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="@string/pooja_room" />

                <ImageView
                    android:id="@+id/pooja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:paddingBottom="@dimen/_16dp"

                    android:scaleType="center"
                    android:src="@drawable/poojadiya" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bedroomlayout"
                android:layout_width="@dimen/_160dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/select_device_unselected_bg"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/monotype_plantin_mt_pro_regular"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="@string/bed_room" />

                <ImageView
                    android:id="@+id/bedroom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_1dp"
                    android:paddingBottom="@dimen/_35dp"
                    android:scaleType="center"
                    android:src="@drawable/bedroom" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/studylayout"
                android:layout_width="@dimen/_160dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/select_device_unselected_bg"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/monotype_plantin_mt_pro_regular"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:text="@string/study_room" />

                <ImageView
                    android:id="@+id/study"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_1dp"
                    android:paddingBottom="@dimen/_20dp"
                    android:scaleType="center"
                    android:src="@drawable/study" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/halllayout"
                android:layout_width="@dimen/_160dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/select_device_unselected_bg"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/monotype_plantin_mt_pro_regular"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="@string/hall" />

                <ImageView
                    android:id="@+id/hall"
                    android:paddingBottom="@dimen/_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_1dp"
                    android:scaleType="center"
                    android:src="@drawable/hall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/storeRoom"
                android:layout_width="@dimen/_160dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/select_device_unselected_bg"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/monotype_plantin_mt_pro_regular"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="@string/store_room" />

                <ImageView
                    android:id="@+id/store"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="1dp"
                    android:scaleType="center"
                    android:src="@drawable/storeroom" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:layout_margin="@dimen/_5dp"
            android:id="@+id/next_button"
            style="@style/PrimaryGrayButton"
            android:padding="@dimen/_15dp"
            android:layout_width="@dimen/_200dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:clickable="false"
            android:text="@string/next"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:layout_margin="@dimen/_5dp"
            android:id="@+id/skipButton"
            style="@style/PrimaryButton"
            android:padding="@dimen/_15dp"
            android:layout_width="@dimen/_200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/skip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/skip" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
</layout>