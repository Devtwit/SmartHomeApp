<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/addBleDeviceFragment"
        android:name="com.example.bthome.fragments.AddBleDeviceFragment"
        android:label="fragment_add_ble_device"
        tools:layout="@layout/fragment_add_ble_device" >
        <action
            android:id="@+id/action_addBleDeviceFragment_to_bleScanResultFragment"
            app:destination="@id/bleScanResultFragment" />
        <action
            android:id="@+id/action_addBleDeviceFragment_to_moreFragment"
            app:destination="@id/moreFragment" />
        <action
            android:id="@+id/action_addBleDeviceFragment_to_selectRoomFragment"
            app:destination="@id/selectRoomFragment" />
        <action
            android:id="@+id/action_addBleDeviceFragment_to_dataBaseUpdateFragment"
            app:destination="@id/dataBaseUpdateFragment" />
        <action
            android:id="@+id/action_addBleDeviceFragment_to_searchLocationFragment"
            app:destination="@id/searchLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/bleScanResultFragment"
        android:name="com.example.bthome.fragments.BleScanResultFragment"
        android:label="fragment_ble_scan_result"
        tools:layout="@layout/fragment_ble_scan_result" />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.bthome.fragments.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_addBleDeviceFragment"
            app:destination="@id/addBleDeviceFragment" />
    </fragment>
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.bthome.fragments.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more" >
        <action
            android:id="@+id/action_moreFragment_to_dataBaseUpdateFragment"
            app:destination="@id/dataBaseUpdateFragment" />
        <action
            android:id="@+id/action_moreFragment_to_searchLocationFragment"
            app:destination="@id/searchLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/dataBaseUpdateFragment"
        android:name="com.example.bthome.fragments.DataBaseUpdateFragment"
        android:label="fragment_data_base_update"
        tools:layout="@layout/fragment_data_base_update" >
        <action
            android:id="@+id/action_dataBaseUpdateFragment_to_addBleDeviceFragment"
            app:destination="@id/addBleDeviceFragment" />
        <action
            android:id="@+id/action_dataBaseUpdateFragment_to_changeNameFragment"
            app:destination="@id/changeNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/changeNameFragment"
        android:name="com.example.bthome.fragments.ChangeNameFragment"
        android:label="fragment_change_name"
        tools:layout="@layout/fragment_change_name" >
        <action
            android:id="@+id/action_changeNameFragment_to_addBleDeviceFragment"
            app:destination="@id/addBleDeviceFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectRoomFragment"
        android:name="com.example.bthome.fragments.SelectRoomFragment"
        android:label="fragment_select_room"
        tools:layout="@layout/fragment_select_room" >
        <action
            android:id="@+id/action_selectRoomFragment_to_searchLocationFragment"
            app:destination="@id/searchLocationFragment" />
        <action
            android:id="@+id/action_selectRoomFragment_to_addBleDeviceFragment"
            app:destination="@id/addBleDeviceFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchLocationFragment"
        android:name="com.example.bthome.fragments.SearchLocationFragment"
        android:label="fragment_search_location"
        tools:layout="@layout/fragment_search_location" >
        <action
            android:id="@+id/action_searchLocationFragment_to_selectRoomFragment"
            app:destination="@id/selectRoomFragment" />
    </fragment>
</navigation>