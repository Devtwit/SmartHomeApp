<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/akkurat_pro_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/primary_button_background_selector</item>
        <item name="android:fontFamily">@font/akkurat_pro_regular</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PrimaryWhiteButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/primary_white_button_background_selector</item>
        <item name="android:fontFamily">@font/akkurat_pro_regular</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/secondary_button_background_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/akkurat_pro_regular</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="TertiaryButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/akkurat_pro_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="FontLocalizedBold">
        <item name="android:fontFamily">@font/akkurat_pro_bold</item>
    </style>

    <style name="FontLocalizedBoldItalic">
        <item name="android:fontFamily">@font/akkurat_pro_bold_italic</item>
    </style>


    <style name="FontLocalizedLight">
        <item name="android:fontFamily">@font/akkurat_pro_light</item>
    </style>

    <style name="FontLocalizedLightItalic">
        <item name="android:fontFamily">@font/akkurat_pro_light_italic</item>
    </style>

    <style name="FontLocalizedRegular">
        <item name="android:fontFamily">@font/akkurat_pro_regular</item>
    </style>

    <style name="FontLocalizedPlantin">
        <item name="android:fontFamily">@font/monotype_plantin_mt_pro_regular</item>
    </style>

    <style name="FontLocalizedPlantinItalic">
        <item name="android:fontFamily">@font/monotype_plantin_mt_std_italic</item>
    </style>

</resources>
